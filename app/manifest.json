{
  "name": "Laterr",
  "version": "0.1.0",
  "manifest_version": 3,
  "description": "Now you can finally read it laterr",
  "permissions": ["storage", "tabs"],
  "host_permissions": ["*://*/*"],
  "background": {
    "service_worker": "scripts/workers/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "scripts/content.js",
        "scripts/handlers/form.handler.js",
        "scripts/handlers/login.handler.js",
        "scripts/services/auth.service.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/*", "scripts/*.js", "scripts/**/*.js"],
      "matches": ["*://*/*"]
    }
  ],
  "action": {
    "default_icon": {
      "48": "assets/icon-48.png"
    },
    "default_title": "Laterr",
    "default_popup": "pages/login/login.html"
  }
}
